@model IEnumerable<TodoItem>

@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h1 class="fs-3 fw-light">Track your current tasks</h1>
        <a asp-controller="Home" asp-action="Create">Create New</a>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-secondary">
                You have no tasks in the system
            </div>
        } else
        {
            <ul class="list-group list-group-flush">
                @foreach (var item in Model)
                {
                    <li class="list-group-item d-flex">
                        <div class="" style="margin-right: 5px">                            
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="@item.IsCompleted" @(item.IsCompleted ? "checked='checked'" : "") />
                                </label>
                            </div>                    
                        </div>
                        <div>
                            <small class="text-secondary">@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are you sure you want delete this task?')">Delete</a>
                            <p>@item.Text</p>
                        </div>
                    </li>                  
                }
            </ul>
        }
    </div>
</div>
