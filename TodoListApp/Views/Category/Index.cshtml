@model IEnumerable<Category>

<div class="card">
    <div class="card-header">
        <h1 class="fs-2 fw-light">Your Categories</h1>
        <a asp-action="Create">Create</a>      
    </div>

    <div class="card-body">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-3 col-sm-6 p-2">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div>
                                <a class="text-success" asp-action="Edit">Edit</a>
                                <a class="text-danger" asp-action="Delete" asp-route-id="@category.Id" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                            </div>
                            <div class="d-flex align-items-start">
                                <p class="mb-0">@category.Name - <small>@category.CreatedAtString</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>        
    </div>
</div>
